<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permission_fragment">
    <fragment
        android:id="@+id/permission_fragment"
        android:name="com.example.cameraapp.PermissionsFragment"
        android:label="PermissionFragment">
        <action
            android:id="@+id/action_PermissionFragment_to_CameraFragment"
            app:destination="@id/camera_fragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.example.cameraapp.CameraFragment"
        android:label="CameraFragment"
        tools:layout="@layout/fragment_camera">
        <action
            android:id="@+id/action_CameraFragment_to_PreviewFragment"
            app:destination="@id/preview_fragment" />
    </fragment>

    <fragment
        android:id="@+id/preview_fragment"
        android:name="com.example.cameraapp.PreviewFragment"
        android:label="PreviewFragment"
        tools:layout="@layout/fragment_preview">
        <argument
            android:name="imageUri"
            app:argType="string" />
    </fragment>
</navigation>